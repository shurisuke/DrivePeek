<%= turbo_stream.replace dom_id(@spot, :favorite_button) do %>
  <%= render "favorite_spots/button", spot: @spot, favorite_spot: @favorite_spot, animate: true %>
<% end %>

<%# InfoWindow用（開いている場合のみ更新される） %>
<%= turbo_stream.replace dom_id(@spot, :infowindow_favorite) do %>
  <%= render "favorite_spots/infowindow_button", spot: @spot, favorite_spot: @favorite_spot %>
<% end %>

<%# スポットカード用カウント更新 %>
<%= turbo_stream.update dom_id(@spot, :favorite_count), @spot.favorite_spots.count.to_s %>
