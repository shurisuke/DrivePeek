<%# locals: plan:, plan_spot:, tags: %>

<% tags.each do |tag| %>
  <span class="tag-chip">
    <%= t("google_place_types.#{tag.tag_name}", default: tag.tag_name) %>

    <%= link_to "×",
                plan_plan_spot_tag_path(plan, plan_spot, tag),
                data: { turbo_method: :delete, turbo_frame: dom_id(plan_spot, :tag_chips) },
                class: "tag-chip__remove",
                "aria-label": "タグを削除" %>
  </span>
<% end %>