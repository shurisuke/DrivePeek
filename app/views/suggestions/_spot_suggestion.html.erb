<%# 提案スポットカード %>
<% compact = local_assigns.fetch(:compact, false) %>
<% existing_place_ids = local_assigns.fetch(:existing_place_ids, []) %>
<div class="suggestion-spot-card<%= ' suggestion-spot-card--compact' if compact %>"
     data-controller="suggestion-spot-action"
     data-suggestion-spot-action-name-value="<%= spot[:name] %>"
     data-suggestion-spot-action-plan-id-value="<%= plan&.id %>"
     data-suggestion-spot-action-number-value="<%= number %>"
     data-suggestion-spot-action-spot-id-value="<%= spot[:spot_id] %>"
     data-suggestion-spot-action-lat-value="<%= spot[:lat] %>"
     data-suggestion-spot-action-lng-value="<%= spot[:lng] %>"
     data-suggestion-spot-action-place-id-value="<%= spot[:place_id] %>">
  <div class="suggestion-spot-card__header">
    <span class="suggestion-spot-card__number"><%= number %></span>
    <span class="suggestion-spot-card__name"><%= spot[:name] %></span>
  </div>

  <div class="suggestion-spot-card__address"><i class="bi bi-geo-alt"></i><%= spot[:address] %></div>

  <% if spot[:description].present? %>
    <div class="suggestion-spot-card__description"><%= spot[:description] %></div>
  <% end %>

  <% unless compact %>
    <% already_added = existing_place_ids.include?(spot[:place_id]) %>
    <div class="suggestion-spot-card__actions">
      <button type="button"
              class="suggestion-spot-card__link"
              data-action="click->suggestion-spot-action#showOnMap">
        地図で見る
      </button>
      <% if already_added %>
        <button type="button"
                class="suggestion-spot-card__link suggestion-spot-card__btn--added"
                disabled>
          <i class="bi bi-check-lg"></i> 追加済み
        </button>
      <% else %>
        <button type="button"
                class="suggestion-spot-card__link suggestion-spot-card__link--primary"
                data-action="click->suggestion-spot-action#addToPlan"
                data-suggestion-spot-action-target="addBtn">
          プランに追加
          <i class="bi bi-chevron-right"></i>
        </button>
      <% end %>
    </div>
  <% end %>
</div>
