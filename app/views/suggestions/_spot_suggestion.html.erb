<%# 提案スポットカード（spot-cardを再利用） %>
<% compact = local_assigns.fetch(:compact, false) %>
<% existing_place_ids = local_assigns.fetch(:existing_place_ids, []) %>
<div class="spot-card spot-card--suggestion<%= ' spot-card--compact' if compact %>"
     data-controller="suggestion--suggested-spot"
     data-suggestion--suggested-spot-name-value="<%= spot[:name] %>"
     data-suggestion--suggested-spot-plan-id-value="<%= plan&.id %>"
     data-suggestion--suggested-spot-number-value="<%= number %>"
     data-suggestion--suggested-spot-spot-id-value="<%= spot[:spot_id] %>"
     data-suggestion--suggested-spot-lat-value="<%= spot[:lat] %>"
     data-suggestion--suggested-spot-lng-value="<%= spot[:lng] %>"
     data-suggestion--suggested-spot-place-id-value="<%= spot[:place_id] %>">

  <%# ヘッダー: 番号 + 名前 %>
  <div class="spot-card__header">
    <div class="spot-card__title-block">
      <h3 class="spot-card__name">
        <span class="spot-card__number"><%= number %></span>
        <%= spot[:name] %>
      </h3>
    </div>
  </div>

  <%# 住所 %>
  <div class="spot-card__location">
    <i class="bi bi-geo-alt" aria-hidden="true"></i>
    <%= spot[:address] %>
  </div>

  <%# AI説明文（提案専用） %>
  <% if spot[:description].present? %>
    <div class="spot-card__description"><%= spot[:description] %></div>
  <% end %>

  <%# フッター %>
  <% unless compact %>
    <% already_added = existing_place_ids.include?(spot[:place_id]) %>
    <div class="spot-card__footer">
      <button type="button"
              class="spot-card__map-link"
              data-action="click->suggestion--suggested-spot#showOnMap">
        <i class="bi bi-geo-alt-fill"></i>
        地図で見る
      </button>
      <% if already_added %>
        <button type="button"
                class="spot-card__btn spot-card__btn--added"
                disabled>
          <i class="bi bi-check-lg"></i>
          追加済み
        </button>
      <% else %>
        <button type="button"
                class="spot-card__btn spot-card__btn--primary"
                data-action="click->suggestion--suggested-spot#addToPlan"
                data-suggestion--suggested-spot-target="addBtn">
          プランに追加
          <i class="bi bi-plus-lg"></i>
        </button>
      <% end %>
    </div>
  <% end %>
</div>
