<%# 提案モード 応答後アクションボタン %>
<%# locals: mode:, area_data: {}, condition_data: {}, plan: nil %>
<div class="suggest-mode-actions"
     data-controller="suggestion-tab--mode"
     data-suggestion-tab--mode-mode-value="<%= mode %>"
     data-suggestion-tab--mode-area-value="<%= area_data.to_json %>"
     data-suggestion-tab--mode-condition-value="<%= condition_data.to_json %>"
     data-suggestion-tab--mode-plan-id-value="<%= plan&.id %>">
  <button type="button"
          class="suggest-mode-actions__btn"
          data-action="click->suggestion-tab--mode#reselectArea">
    <i class="bi bi-map"></i>
    エリアを選び直す
  </button>
  <button type="button"
          class="suggest-mode-actions__btn"
          data-action="click->suggestion-tab--mode#changeCondition">
    <i class="bi bi-sliders"></i>
    条件を変更
  </button>
  <button type="button"
          class="suggest-mode-actions__btn"
          data-action="click->suggestion-tab--mode#finish">
    <i class="bi bi-check-circle"></i>
    終了
  </button>
</div>
