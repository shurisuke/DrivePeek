<%# エリア選択による提案結果を追加（マーカー付き） %>
<%= turbo_stream.append "suggestion-messages" do %>
  <div class="suggestion-scroll-marker"></div>
  <%= render "suggestions/message",
             content: @result[:message],
             spots: @result[:spots],
             plan_data: @result[:plan],
             intro: @result[:intro],
             closing: @result[:closing],
             response_type: @result[:type],
             role: "assistant",
             plan: @plan,
             auto_show: true,
             area_data: @area_data %>
<% end %>
