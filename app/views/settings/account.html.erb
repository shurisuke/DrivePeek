<div class="auth-page">
  <div class="auth-card">
    <div class="auth-header">
      <%= link_to settings_path, class: "auth-back-link" do %>
        <i class="bi bi-chevron-left"></i>
      <% end %>
      <h2 class="auth-title">アカウント操作</h2>
    </div>

    <%# ログアウト %>
    <div class="account-action">
      <%= button_to users_sign_out_path, method: :delete, class: "auth-submit auth-submit--secondary" do %>
        <i class="bi bi-box-arrow-right"></i> ログアウト
      <% end %>
    </div>

    <%# アカウント削除 %>
    <div class="settings-menu">
      <div class="settings-menu-item account-delete-section">
        <%= button_to "アカウントを削除する", registration_path(:user),
                      method: :delete,
                      class: "auth-submit auth-submit--danger",
                      data: { turbo_confirm: "本当にアカウントを削除しますか？\nこの操作は取り消せません。" } %>
        <p class="settings-hint account-delete-hint">
          削除すると全てのプランとデータが失われます。<br>
          この操作は取り消せません。
        </p>
      </div>
    </div>
  </div>
</div>
