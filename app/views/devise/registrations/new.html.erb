<div class="container d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="card shadow p-4 rounded-4" style="max-width: 500px; width: 100%;">
    <h2 class="mb-4 text-center text-primary">新規登録</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-group mb-3">
        <%= f.input :name,
                    label: 'ユーザーネーム',
                    required: true,
                    input_html: { class: "form-control", autocomplete: "username" } %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :email,
                    label: 'メールアドレス',
                    required: true,
                    input_html: { class: "form-control placeholder-light", autocomplete: "email", placeholder: "example@example.com" } %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :password,
                    label: 'パスワード',
                    required: true,
                    hint: ("→#{@minimum_password_length}文字以上で入力してください" if @minimum_password_length),
                    input_html: { class: "form-control", autocomplete: "new-password" } %>
      </div>

      <div class="form-group mb-4">
        <%= f.input :password_confirmation,
                    label: 'パスワード(確認)',
                    required: true,
                    input_html: { class: "form-control", autocomplete: "new-password" } %>
      </div>

      <div class="d-grid ">
        <%= f.button :submit, "登録する", class: "btn btn-primary btn-lg rounded-3", style: "width: 150px; margin: 0 auto;" %>
      </div>
    <% end %>

    <hr class="my-4">

    <div class="text-center">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_user_session_path, class: "text-decoration-none text-muted" %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
