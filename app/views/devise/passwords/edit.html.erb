<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">新しいパスワードを設定</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>

      <% if resource.errors.any? %>
        <ul class="auth-errors">
          <% resource.errors.full_messages.uniq.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group mb-3">
        <%= f.input :password,
                    label: '新しいパスワード',
                    required: true,
                    autofocus: true,
                    error: false,
                    input_html: { class: "form-control", autocomplete: "new-password", placeholder: "6文字以上" } %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :password_confirmation,
                    label: '新しいパスワード（確認）',
                    required: true,
                    error: false,
                    input_html: { class: "form-control", autocomplete: "new-password" } %>
      </div>

      <%= f.button :submit, "パスワードを変更", class: "auth-submit" %>
    <% end %>
  </div>
</div>
