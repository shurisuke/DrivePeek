<div class="top-hero">
  <!-- すりガラスカード -->
  <div class="top-hero__card">
    <!-- ヘルプボタン -->
    <%= link_to guide_path, class: "top-hero__help" do %>
      <i class="fa-solid fa-question"></i>
    <% end %>

    <div class="top-hero__logo">
      <%= image_tag "car.png", width: 64, height: 64, alt: "DrivePeek" %>
    </div>
    <h1 class="top-hero__title"><span class="top-hero__title-drive">Drive</span><span class="top-hero__title-peek">Peek</span></h1>
    <p class="top-hero__tagline">地図 × AI × 誰かの旅で<br>理想のドライブプランを</p>

    <div class="top-hero__actions">
      <%= link_to new_user_registration_path, class: "top-hero__btn top-hero__btn--primary" do %>
        <i class="fa-solid fa-user-plus"></i>
        <span>無料で始める</span>
      <% end %>

      <%= link_to new_user_session_path, class: "top-hero__btn top-hero__btn--secondary top-hero__btn--full" do %>
        <i class="fa-solid fa-right-to-bracket"></i>
        <span>ログイン</span>
      <% end %>
    </div>

    <div class="top-hero__sns">
      <span class="top-hero__sns-label">SNSでかんたん登録</span>
      <div class="top-hero__sns-buttons">
        <%= button_to user_line_omniauth_authorize_path, method: :post,
                      class: "top-hero__sns-btn top-hero__sns-btn--line",
                      data: { turbo: false } do %>
          <i class="bi bi-line"></i>
        <% end %>
        <%= button_to user_twitter2_omniauth_authorize_path, method: :post,
                      class: "top-hero__sns-btn top-hero__sns-btn--x",
                      data: { turbo: false } do %>
          <i class="bi bi-twitter-x"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
